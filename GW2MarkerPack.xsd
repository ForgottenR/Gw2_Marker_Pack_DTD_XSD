  <xs:attributeGroup name="bh-MarkerAndTrailAttr">
    <xs:attribute name="bh-type" type="xs:string"/>
  </xs:attributeGroup>

  <xs:simpleType name="bool">
    <xs:restriction base="xs:string">
      <xs:pattern value="[01]"/>
    </xs:restriction>
  </xs:simpleType>

</xs:schema>